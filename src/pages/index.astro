---
import Layout from '../layouts/Layout.astro';
import { fetchPortfolios, groupByLetter } from '../lib/portfolios';

const portfolios = await fetchPortfolios();
const grouped = groupByLetter(portfolios);
const letters = [...grouped.keys()];
const totalCount = portfolios.length;
---

<Layout title={`Dev Portfolios — ${totalCount} Developer Portfolio Sites`}>
  <!-- Header -->
  <header class="sticky top-0 z-50 bg-zinc-950/90 backdrop-blur border-b border-zinc-800/50">
    <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 rounded-lg bg-violet-600 flex items-center justify-center text-white font-bold text-sm">DP</div>
        <h1 class="text-lg font-bold tracking-tight">Dev Portfolios</h1>
      </div>
      <div class="flex items-center gap-4">
        <span class="text-sm text-zinc-500">{totalCount} sites</span>
        <a href="https://github.com/emmabostian/developer-portfolios" target="_blank" rel="noopener" class="text-zinc-400 hover:text-white transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
        </a>
      </div>
    </div>
  </header>

  <!-- Hero -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-violet-600/5 to-transparent"></div>
    <div class="max-w-7xl mx-auto px-4 py-16 text-center relative">
      <h2 class="text-4xl md:text-5xl font-extrabold tracking-tight">
        <span class="bg-gradient-to-r from-violet-400 to-fuchsia-400 bg-clip-text text-transparent">{totalCount}</span> Developer Portfolios
      </h2>
      <p class="text-lg text-zinc-400 mt-4 max-w-2xl mx-auto">
        A curated showcase of developer portfolio sites for inspiration. Browse by name, search, or just explore.
      </p>
      <div class="mt-6 text-sm text-zinc-500">
        Data from <a href="https://github.com/emmabostian/developer-portfolios" target="_blank" class="text-violet-400 hover:text-violet-300 underline underline-offset-2">emmabostian/developer-portfolios</a> · Auto-updated on every merged PR
      </div>
    </div>
  </section>

  <!-- Search -->
  <div class="max-w-7xl mx-auto px-4 mb-8">
    <div class="relative">
      <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
      <input
        type="text"
        id="search"
        placeholder="Search by name or title..."
        class="w-full pl-12 pr-4 py-3 rounded-xl bg-zinc-900 border border-zinc-800 text-white placeholder:text-zinc-500 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent transition-all"
      />
      <span id="search-count" class="absolute right-4 top-1/2 -translate-y-1/2 text-sm text-zinc-500 hidden"></span>
    </div>
  </div>

  <!-- Letter nav -->
  <nav class="max-w-7xl mx-auto px-4 mb-8">
    <div class="flex flex-wrap gap-1.5 justify-center">
      {letters.map((letter) => (
        <a
          href={`#${letter}`}
          class="w-9 h-9 rounded-lg bg-zinc-900 hover:bg-violet-600 text-zinc-400 hover:text-white flex items-center justify-center text-sm font-semibold transition-all"
        >
          {letter}
        </a>
      ))}
    </div>
  </nav>

  <!-- Portfolio grid -->
  <main class="max-w-7xl mx-auto px-4 pb-20">
    {[...grouped.entries()].map(([letter, items]) => (
      <section id={letter} class="mb-12 letter-section">
        <div class="flex items-center gap-3 mb-4 sticky top-[73px] bg-zinc-950/95 backdrop-blur py-2 z-10">
          <span class="text-2xl font-extrabold text-violet-400">{letter}</span>
          <span class="text-sm text-zinc-500">{items.length}</span>
          <div class="flex-1 h-px bg-zinc-800"></div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
          {items.map((p) => (
            <a
              href={p.url}
              target="_blank"
              rel="noopener noreferrer"
              class="portfolio-card group block p-4 rounded-xl bg-zinc-900/50 border border-zinc-800/50 hover:border-violet-500/50 hover:bg-zinc-900 transition-all"
              data-name={p.name.toLowerCase()}
              data-title={p.title.toLowerCase()}
            >
              <div class="font-semibold text-white group-hover:text-violet-300 transition-colors truncate">
                {p.name}
              </div>
              {p.title && (
                <div class="text-sm text-zinc-500 mt-1 truncate">{p.title}</div>
              )}
              <div class="text-xs text-zinc-600 mt-2 truncate">{p.url.replace(/^https?:\/\//, '')}</div>
            </a>
          ))}
        </div>
      </section>
    ))}
  </main>

  <!-- Footer -->
  <footer class="border-t border-zinc-800/50 py-8 text-center text-sm text-zinc-500">
    <p>
      Built with <a href="https://astro.build" class="text-violet-400 hover:underline">Astro</a> ·
      Data from <a href="https://github.com/emmabostian/developer-portfolios" class="text-violet-400 hover:underline">emmabostian/developer-portfolios</a> ·
      Auto-rebuilds on every merged PR
    </p>
  </footer>
</Layout>

<script>
  const input = document.getElementById('search') as HTMLInputElement;
  const countEl = document.getElementById('search-count') as HTMLSpanElement;
  const cards = document.querySelectorAll('.portfolio-card') as NodeListOf<HTMLElement>;
  const sections = document.querySelectorAll('.letter-section') as NodeListOf<HTMLElement>;

  input.addEventListener('input', () => {
    const q = input.value.toLowerCase().trim();
    let visible = 0;

    cards.forEach((card) => {
      const name = card.dataset.name || '';
      const title = card.dataset.title || '';
      const match = !q || name.includes(q) || title.includes(q);
      card.style.display = match ? '' : 'none';
      if (match) visible++;
    });

    // Hide empty letter sections
    sections.forEach((section) => {
      const visibleCards = section.querySelectorAll('.portfolio-card:not([style*="display: none"])');
      section.style.display = visibleCards.length ? '' : 'none';
    });

    if (q) {
      countEl.textContent = `${visible} found`;
      countEl.classList.remove('hidden');
    } else {
      countEl.classList.add('hidden');
    }
  });
</script>
